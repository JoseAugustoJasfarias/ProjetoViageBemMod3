@model IEnumerable<ViajeBem.Models.Contato>

@{
    ViewData["Title"] = "Index";
}

<h1>Area Administrativa "DADOS DOS CLIENTES"</h1>

<p>
    <a asp-action="Create">Criar novo cadastro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Contato">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Contato">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Contato">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
